<main>
  <div>
    <div>
      <div class="topPart">
        <div class="title-container">
          <h1>NUESTROS <span>DATOS</span></h1>
        </div>
    
        <div class="divPagination">
          <ul class="pagination pagination-lg paginationConfig">
            <li class="page-item"><a class="page-link myPageLink" href="/analytics">Escuelas</a></li>
            <li class="page-item active" aria-current="page">
              <span class="page-link activeSpan">Fecha</span>
            </li>
          </ul>
        </div>
    </div>
      <hr class="hr-title" />

      <div class="bottom-container">
        <h2 class="chart-title">Por Fecha</h2>
        <div class="faculty-container">
          <canvas id="postByDate-line"></canvas>
        </div>
      </div>
    </div>

    <hr />

    <div class="months">
      <div class="chart-container">
        <h3 class="chart-title">Julio</h3>
        <div class="chart-canvas"><canvas id="july-line"></canvas></div>
      </div>
  
      <div class="chart-container">
        <h3 class="chart-title">Agosto</h3>
        <div class="chart-canvas"><canvas id="august-line"></canvas></div>
      </div>
  
      <div class="chart-container">
        <h3 class="chart-title">Septiembre</h3>
        <div class="chart-canvas"><canvas id="september-line"></canvas></div>
      </div>
  
      <div class="chart-container">
        <h3 class="chart-title">Octubre</h3>
        <div class="chart-canvas"><canvas id="october-line"></canvas></div>
      </div>
  
      <div class="chart-container">
        <h3 class="chart-title">Noviembre</h3>
        <div class="chart-canvas"><canvas id="november-line"></canvas></div>
      </div>

      <div class="chart-container">
        <h3 class="chart-title">Diciembre</h3>
        <div class="chart-canvas"><canvas id="december-line"></canvas></div>
      </div>
    </div>

    <hr />

</main>

<script type="module" src="/scripts/charts.js"></script>