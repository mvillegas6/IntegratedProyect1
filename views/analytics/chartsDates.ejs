<% layout('layout/boilerplate') %>
<link rel="stylesheet" href="/styles/charts.css" />
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
  lenPostsJuly = '<%= July.month.length %>';
  lenWeek1July = '<%= July.week1.length%>';
  lenWeek2July = '<%= July.week2.length%>';
  lenWeek3July = '<%= July.week3.length%>';
  lenWeek4July = '<%= July.week4.length%>';

  lenPostsAugust = '<%= August.month.length %>';
  lenWeek1August = '<%= August.week1.length%>';
  lenWeek2August = '<%= August.week2.length%>';
  lenWeek3August = '<%= August.week3.length%>';
  lenWeek4August = '<%= August.week4.length%>';

  lenPostsSeptember = '<%= September.month.length %>';
  lenWeek1September = '<%= September.week1.length %>';
  lenWeek2September = '<%= September.week2.length %>';
  lenWeek3September = '<%= September.week3.length %>';
  lenWeek4September = '<%= September.week4.length %>';

  lenPostsOctober = '<%= October.month.length %>';
  lenWeek1October = '<%= October.week1.length %>';
  lenWeek2October = '<%= October.week2.length %>';
  lenWeek3October = '<%= October.week3.length %>';
  lenWeek4October = '<%= October.week4.length %>';

  lenPostsNovember = '<%= November.month.length %>';
  lenWeek1November = '<%= November.week1.length %>';
  lenWeek2November = '<%= November.week2.length %>';
  lenWeek3November = '<%= November.week3.length %>';
  lenWeek4November = '<%= November.week4.length %>';

  lenPostsDecember = '<%= December.month.length %>';
  lenWeek1December = '<%= December.week1.length %>';
  lenWeek2December = '<%= December.week2.length %>';
  lenWeek3December = '<%= December.week3.length %>';
  lenWeek4December = '<%= December.week4.length %>';
