<% if (success.length != 0){ %>
    <div class="alert alert-success alert-dismissible fade show flash mt-4 p-3" role="alert">
        <%= success %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>

<% if (error.length != 0){ %>
    <div class="alert alert-danger alert-dismissible fade show flash mt-4 p-3" role="alert">
        <%= error %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>
